	<div align="center" id="listadoClientes"><br><br><br><br><br><br><div id="loader-wrapper"><img src="load.gif" height="9%" width="6%"></img></div></div>
</body>
<script type="text/javascript">
emtpyRows = [];
allData = {
  rows: emtpyRows
};
var filterData = {};
$( document ).ready(function() {
$.ajax({
	                type:"GET",
