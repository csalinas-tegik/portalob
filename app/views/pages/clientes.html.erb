// Búsqueda por texto
  $(document).on('keyup', '.btn_search', function (e) {
    console.log("Busqueda");
    e.preventDefault();
    var parametro = document.getElementById("txt_search").value;
    buscarPalabra(parametro);
    document.getElementById("txt_search").value = parametro;
